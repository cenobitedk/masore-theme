{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">

				<h1 class="article-h1">{{post.title}}</h1>

				{% for collection in fn('masore_get_collections') %}
					<div class="collection">
						<a href="{{ fn('get_term_link', collection.term_id, collection.taxonomy) }}">{{ collection.name }}</a>
					</div>
				{% else %}
					No collections found.
				{% endfor %}

			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
